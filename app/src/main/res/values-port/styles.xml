<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DropDownMenuBtn" parent="">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/selector_drop_down_menu_btn_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/drop_down_menu_btn_bg</item>
        <item name="android:layout_height">112dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="XButton.Flat.Large" parent="@style/XButton.Flat">
        <item name="android:textSize">@dimen/x_font_body_01_size</item>
        <item name="android:paddingLeft">@dimen/x_btn_padding_horizontal_large</item>
        <item name="android:paddingRight">@dimen/x_btn_padding_horizontal_large</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/x_btn_flat_large_height</item>
        <item name="android:minWidth">@dimen/x_btn_flat_large_width</item>
    </style>
    <style name="XButton.Real.Mid" parent="@style/XButton.Real">
        <item name="android:textSize">@dimen/x_font_body_01_size</item>
        <item name="android:paddingLeft">@dimen/x_btn_padding_horizontal_mid</item>
        <item name="android:paddingRight">@dimen/x_btn_padding_horizontal_mid</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/x_btn_real_height</item>
        <item name="android:minWidth">@dimen/x_btn_real_width</item>
    </style>
    <style name="XCatalog.Item" parent="@style/XCatalogItemBase">
        <item name="android:textSize">@dimen/x_font_body_02_size</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">33dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>
    <style name="XListTextSub.Two" parent="@style/XListTextSub">
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
    <style name="XToastLayoutStyle" parent="@style/XToastLayoutStyleBase">
        <item name="android:padding">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">@dimen/x_toast_bg_padding</item>
        <item name="android:paddingEnd">@dimen/x_toast_bg_padding</item>
    </style>
    <style name="XToastTextStyle" parent="@style/XToastTextStyleBase">
        <item name="android:maxLines">2</item>
        <item name="android:singleLine">false</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="item_x_pilot_card_style" parent="">
        <item name="android:layout_margin">12dp</item>
    </style>
    <style name="item_x_pilot_cate_style" parent="@style/XGroupHeader">
        <item name="android:textSize">@dimen/x_font_body_02_size</item>
        <item name="android:textColor">@color/x_theme_text_01</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/x_pilot_cate_margin_top</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>
    <style name="item_x_pilot_tab_style" parent="">
        <item name="android:layout_height">240dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>
    <style name="iv_x_pilot_info_style" parent="">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>
    <style name="tv_x_pilot_card_title_style" parent="">
        <item name="android:textSize">@dimen/x_font_title_04_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginStart">24dp</item>
    </style>
</resources>
