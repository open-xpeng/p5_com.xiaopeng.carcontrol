<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Design.TabLayout" parent="@style/Base.Widget.Design.TabLayout">
        <item name="tabGravity">center</item>
        <item name="tabMode">fixed</item>
    </style>
    <style name="Widget.MaterialComponents.MaterialCalendar.HeaderSelection" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">@integer/mtrl_calendar_selection_text_lines</item>
    </style>
    <style name="XCatalog.Item" parent="@style/XCatalogItemBase">
        <item name="android:textSize">@dimen/x_font_body_01_size</item>
    </style>
    <style name="XToastLayoutStyle" parent="@style/XToastLayoutStyleBase">
        <item name="android:padding">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">@dimen/x_toast_width</item>
        <item name="android:paddingStart">@dimen/x_toast_bg_padding</item>
        <item name="android:paddingEnd">@dimen/x_toast_bg_padding</item>
    </style>
    <style name="XToastTextStyle" parent="@style/XToastTextStyleBase">
        <item name="android:maxWidth">2100dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:singleLine">false</item>
        <item name="android:letterSpacing">0</item>
    </style>
</resources>
