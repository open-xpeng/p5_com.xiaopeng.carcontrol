<?xml version="1.0" encoding="utf-8"?>
<layer-list>
    <item>
        <selector>
            <item android:state_enabled="true" android:state_pressed="true">
                <shape>
                    <corners android:radius="20dp"/>
                    <solid android:color="@color/x_theme_primary_neutral_pressed"/>
                </shape>
            </item>
            <item android:state_enabled="false">
                <shape>
                    <corners android:radius="20dp"/>
                    <solid android:color="@color/x_theme_primary_neutral_disable"/>
                </shape>
            </item>
            <item android:state_enabled="true">
                <shape>
                    <corners android:radius="20dp"/>
                    <solid android:color="@color/drop_down_menu_btn_bg_color"/>
                </shape>
            </item>
        </selector>
    </item>
    <item>
        <drawable app:rippleRadius="20dp" app:rippleSupportScale="true" class="com.xiaopeng.xui.drawable.ripple.XRippleDrawable"/>
    </item>
</layer-list>
