<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="start|center_vertical" android:id="@android:id/background" android:height="80dp">
        <shape android:shape="rectangle">
            <corners android:radius="40dp"/>
            <solid android:color="#5cffffff"/>
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="40dp"/>
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip android:gravity="start" android:clipOrientation="horizontal">
            <shape>
                <corners android:radius="40dp"/>
                <solid android:color="@color/x_theme_primary_normal"/>
            </shape>
        </clip>
    </item>
</layer-list>
