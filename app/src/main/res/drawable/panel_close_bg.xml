<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <solid android:color="@color/btn_bg_pressed"/>
        </shape>
        <color android:color="@color/btn_bg_pressed"/>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <solid android:color="@color/btn_bg_disable"/>
        </shape>
        <color android:color="@color/btn_bg_disable"/>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <solid android:color="@color/btn_bg_normal"/>
        </shape>
        <color android:color="@color/btn_bg_normal"/>
    </item>
</selector>
