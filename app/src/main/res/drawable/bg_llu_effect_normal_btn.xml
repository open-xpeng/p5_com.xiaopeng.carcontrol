<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_enabled="false" android:state_selected="true">
                <shape android:shape="rectangle">
                    <corners android:radius="40dp"/>
                    <solid android:color="@color/x_theme_primary_disable"/>
                </shape>
            </item>
            <item android:state_enabled="false" android:state_selected="false">
                <shape android:shape="rectangle">
                    <corners android:radius="40dp"/>
                    <solid android:color="@color/custom_common_btn_unable"/>
                </shape>
            </item>
            <item android:state_selected="true">
                <shape android:shape="rectangle">
                    <corners android:radius="40dp"/>
                    <solid android:color="@color/x_theme_primary_normal"/>
                </shape>
            </item>
            <item android:state_enabled="true" android:state_selected="false">
                <shape android:shape="rectangle">
                    <corners android:radius="40dp"/>
                    <solid android:color="@color/custom_common_btn_normal"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="14dp"/>
                    <solid android:color="@color/custom_common_btn_normal"/>
                </shape>
            </item>
        </selector>
    </item>
    <item>
        <drawable app:rippleRadius="40dp" app:rippleSupportScale="true" class="com.xiaopeng.xui.drawable.ripple.XRippleDrawable"/>
    </item>
</layer-list>
